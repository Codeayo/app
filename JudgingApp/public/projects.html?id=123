  <title>Project Detail</title>
  <link rel="stylesheet" href="styles.css">
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: linear-gradient(to right, #6a11cb, #2575fc);
      color: white;
      padding: 40px;
    }

    .container {
      background: white;
      color: #333;
      border-radius: 12px;
      padding: 30px;
      max-width: 800px;
      margin: 0 auto;
      box-shadow: 0 10px 25px rgba(0,0,0,0.2);
    }

    h2 {
      color: #222;
    }

    .reviews {
      margin-top: 30px;
    }

    .review-box {
      margin-bottom: 20px;
      border-bottom: 1px solid #ddd;
      padding-bottom: 15px;
    }

    .review-box strong {
      display: block;
      margin-bottom: 5px;
      color: #444;
    }

    .back-link {
      display: block;
      margin-top: 30px;
